<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MyProject"
             x:Class="MyProject.StatisticsPage"
             Padding="10">

    <ContentPage.BindingContext>
        <vm:MovieViewModel />
    </ContentPage.BindingContext>

    <StackLayout Spacing="20">
        <Label Text="ðŸ“Š Movie Statistics" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Picker x:Name="StatsTimeRangePicker"
                Title="Select Time Range"
                SelectedIndexChanged="StatsTimeRangePicker_SelectedIndexChanged"
                HorizontalOptions="Center"
                Margin="0,5">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>All Time</x:String>
                    <x:String>Last Year</x:String>
                    <x:String>Last Month</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Frame  Background="{DynamicResource SectionBackgroundBrush}" Padding="10" HasShadow="True">
            <StackLayout>
                <Label Text="â¤ï¸ Total Favorites:" FontAttributes="Bold"/>
                <Label Text="{Binding TotalFavorites}" FontSize="18"/>
            </StackLayout>
        </Frame>

        <Frame  Background="{DynamicResource SectionBackgroundBrush}" Padding="10" HasShadow="True">
            <StackLayout>
                <Label Text="ðŸŽ¬ Most Watched Genre:" FontAttributes="Bold"/>
                <Label Text="{Binding MostWatchedGenre}" FontSize="18"/>
            </StackLayout>
        </Frame>

        <Frame Padding="10" HasShadow="True" Background="{DynamicResource SectionBackgroundBrush}">
            <StackLayout>
                <Label Text="â­ Average Rating:" FontAttributes="Bold"/>
                <Label Text="{Binding AverageRating, StringFormat='{0:F1}/10'}" FontSize="18"/>
            </StackLayout>
        </Frame>

        <Frame Padding="10" HasShadow="True" Background="{DynamicResource SectionBackgroundBrush}">
            <StackLayout>
                <Label Text="ðŸŽ¥ Top Director:" FontAttributes="Bold"/>
                <Label Text="{Binding TopDirector}" FontSize="18"/>
            </StackLayout>
        </Frame>
        
    </StackLayout>
</ContentPage>
