<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MyProject"
             x:Class="MyProject.StatisticsPage"
             Title="Statistics"
             Padding="10">

    <ContentPage.BindingContext>
        <vm:MovieViewModel />
    </ContentPage.BindingContext>

    <StackLayout Spacing="20">
        <Label Text="ðŸ“Š Movie Statistics" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center"/>

        <Frame Padding="10" HasShadow="True">
            <StackLayout>
                <Label Text="Total Favorites:" FontAttributes="Bold"/>
                <Label Text="{Binding TotalFavorites}" FontSize="18"/>
            </StackLayout>
        </Frame>

        <Frame Padding="10" HasShadow="True">
            <StackLayout>
                <Label Text="Most Watched Genre:" FontAttributes="Bold"/>
                <Label Text="{Binding MostWatchedGenre}" FontSize="18"/>
            </StackLayout>
        </Frame>
    </StackLayout>
</ContentPage>
