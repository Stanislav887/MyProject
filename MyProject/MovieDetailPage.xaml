<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyProject"
             x:Class="MyProject.MovieDetailPage"
             BackgroundColor="{DynamicResource PageBackgroundColor}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToStarConverter x:Key="BoolToStarConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <StackLayout Padding="20" Spacing="20">

        <!-- Movie Header -->
        <Frame Background="{DynamicResource CardBackgroundBrush}"
               CornerRadius="16"
               Padding="20"
               HasShadow="True">

            <StackLayout Spacing="10" HorizontalOptions="Center">

                <!-- Emoji -->
                <Label Text="{Binding emoji}" 
                       FontSize="60" 
                       HorizontalOptions="Center" />

                <!-- Title -->
                <Label Text="{Binding title}" 
                       FontSize="26" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center" />

                <!-- Favorite button -->
                <Button Text="{Binding IsFavorite, Converter={StaticResource BoolToStarConverter}}"
                        Clicked="FavoriteButton_Clicked"
                        FontSize="20"/>

        </StackLayout>
        </Frame>

        <!-- Movie details inside a card-style Frame -->
        <Frame Background="{DynamicResource CardBackgroundBrush}"
               CornerRadius="16"
               Padding="20"
               HasShadow="True">

            <StackLayout Spacing="12">

                <Label Text="Movie Details"
                       FontSize="18"
                       FontAttributes="Bold"/>

                <!-- Year -->
                <StackLayout Orientation="Horizontal" Spacing="8">
                    <Label Text="📅 Year: " FontSize="18"/>
                    <Label Text="{Binding year}" FontSize="16"/>
                </StackLayout>

                <!-- Year -->
                <StackLayout Orientation="Horizontal" Spacing="8">
                    <Label Text="🎬 Director: " FontSize="18"/>
                    <Label Text="{Binding director}" FontSize="16"/>
                </StackLayout>

                <!-- Rating -->
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Label Text="⭐ Rating: " FontSize="18"/>
                    <Label Text="{Binding rating}" FontSize="16"/>
                </StackLayout>

                <!-- Genre -->
                <StackLayout Orientation="Horizontal" Spacing="10">
                    <Label Text="🎭 Genre: " FontSize="18"/>
                    <Label Text="{Binding genreString}" FontSize="16"/>
                </StackLayout>

            </StackLayout>
        </Frame>

    </StackLayout>
    </ScrollView>
</ContentPage>