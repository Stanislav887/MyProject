<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProject.UserNamePage"
             Title="Welcome">

    <StackLayout Padding="30" Spacing="20" VerticalOptions="Center">
        <Label Text="Enter your name:" FontSize="20" HorizontalOptions="Center" />

        <Entry x:Name="NameEntry" Placeholder="Your name" />

        <Button Text="Continue" Clicked="ContinueButton_Clicked" />
    </StackLayout>
</ContentPage>
