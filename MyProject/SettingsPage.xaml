<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProject.SettingsPage"
             Title="Settings"
             Padding="20">

    <StackLayout Spacing="20">

        <Label Text="Appearance" FontAttributes="Bold" FontSize="20"/>

        <Picker x:Name="ThemePicker" Title="Choose Theme"
                SelectedIndexChanged="ThemePicker_SelectedIndexChanged">
            <Picker.Items>
                <x:String>System Default</x:String>
                <x:String>Light</x:String>
                <x:String>Dark</x:String>
            </Picker.Items>
        </Picker>

    </StackLayout>
</ContentPage>
