<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProject.SettingsPage"
             Title="Settings"
             Padding="20">

    <StackLayout Spacing="20">

        <!-- Appearance Section -->
        <Label Text="Appearance" FontAttributes="Bold" FontSize="20"/>

        <Picker x:Name="ThemePicker" Title="Choose Theme"
                SelectedIndexChanged="ThemePicker_SelectedIndexChanged">
            <Picker.Items>
                <x:String>System Default</x:String>
                <x:String>Light</x:String>
                <x:String>Dark</x:String>
            </Picker.Items>
        </Picker>

        <!-- Animations Section -->
        <Label Text="Animations" FontAttributes="Bold" FontSize="20" Margin="0,30,0,0"/>
        <Switch x:Name="AnimationsSwitch"
                IsToggled="true"
                Toggled="AnimationsSwitch_Toggled"/>

        <!-- Data Section -->
        <Label Text="Data"
               FontAttributes="Bold"
               FontSize="20"
               Margin="0,30,0,0"/>

        <Button Text="ðŸ—‘ Clear Movie History"
                BackgroundColor="LightCoral"
                TextColor="White"
                Clicked="ClearHistory_Clicked"/>


    </StackLayout>
</ContentPage>
