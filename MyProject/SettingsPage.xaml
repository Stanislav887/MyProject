<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProject.SettingsPage"
             Title="Settings"
             Padding="20">

    <StackLayout Spacing="30">

        <!-- Profile Section -->
        <Frame Background="{DynamicResource SectionBackgroundBrush}"
               CornerRadius="12"
               Padding="15"
               HasShadow="True">

            <StackLayout Spacing="10">
                <Label Text="Profile"
                       FontAttributes="Bold"
                       FontSize="20"/>

                <!-- Username display -->
                <Label Text="{Binding UserName}"
                       FontSize="16"
                       Opacity="0.8"/>

                <!-- Optional: Change username -->
                <Button Text="âœï¸ Change Username"
                        Clicked="ChangeUsername_Clicked"/>

                <!-- Reset username -->
                <Button Text="ðŸ‘¤ Reset Username"
                        BackgroundColor="#FFA07A"
                        TextColor="White"
                        Clicked="ResetUsername_Clicked"/>
            </StackLayout>
        </Frame>

        <!-- Appearance Section -->
        <Frame Background="{DynamicResource SectionBackgroundBrush}" CornerRadius="12" Padding="15" HasShadow="True">
            <StackLayout Spacing="10">
                <Label Text="Appearance" FontAttributes="Bold" FontSize="20"/>
                <Picker x:Name="ThemePicker" Title="Choose Theme"
                        SelectedIndexChanged="ThemePicker_SelectedIndexChanged">
                    <Picker.Items>
                        <x:String>System Default</x:String>
                        <x:String>Light</x:String>
                        <x:String>Dark</x:String>
                    </Picker.Items>
                </Picker>
            </StackLayout>
        </Frame>

        <!-- Animations Section -->
        <Frame Background="{DynamicResource SectionBackgroundBrush}" CornerRadius="12" Padding="15" HasShadow="True">
            <StackLayout Spacing="10">
                <Label Text="Enable animations" FontAttributes="Bold" FontSize="20"/>
                <Switch x:Name="AnimationsSwitch"
                        IsToggled="true"
                        Toggled="AnimationsSwitch_Toggled"/>
            </StackLayout>
        </Frame>

        <!-- Data Section -->
        <Frame Background="{DynamicResource SectionBackgroundBrush}" CornerRadius="12" Padding="15" HasShadow="True">
            <StackLayout Spacing="10">
                <Label Text="Data"
                       FontAttributes="Bold"
                       FontSize="20"/>
                
                <Button Text="ðŸ—‘ Clear Movie History"
                        BackgroundColor="LightCoral"
                        TextColor="White"
                        Clicked="ClearHistory_Clicked"
                        Margin="0,0,0,10"/>

                <Button Text="ðŸ‘¤ Reset Username"
                        BackgroundColor="#FFA07A"
                        TextColor="White"
                        Clicked="ResetUsername_Clicked"/>

            </StackLayout>
    </Frame>


    </StackLayout>
</ContentPage>
