<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProject.SettingsPage"
             Title="Settings"
             Padding="20">
    
<ScrollView>
    <StackLayout Spacing="30">

        <!-- Profile Section -->
        <Frame Background="{DynamicResource SectionBackgroundBrush}"
               CornerRadius="12"
               Padding="15"
               HasShadow="True">

            <StackLayout Spacing="10">
                <Label Text="Profile"
                       FontAttributes="Bold"
                       FontSize="20"/>

                    <!-- Profile avatar + username with emoji picker -->
                    <StackLayout Orientation="Horizontal" Spacing="10" VerticalOptions="Center">
                        <Label Text="{Binding UserEmoji}" FontSize="32"/>
                        <Label Text="{Binding UserName}" FontSize="16" VerticalOptions="Center"/>

                        <!-- Emoji picker -->
                        <Picker x:Name="AvatarPicker"
                                Title="Choose Emoji"
                                SelectedIndexChanged="AvatarPicker_SelectedIndexChanged"
                                HorizontalOptions="EndAndExpand">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <!-- Movie-themed -->
                                    <x:String>üé¨</x:String>
                                    <x:String>üçø</x:String>
                                    <x:String>üé•</x:String>
                                    <x:String>üìΩÔ∏è</x:String>

                                    <!-- Fun faces -->
                                    <x:String>üòÄ</x:String>
                                    <x:String>üòé</x:String>
                                    <x:String>ü§©</x:String>
                                    <x:String>üò∫</x:String>
                                    <x:String>üòá</x:String>
                                    <x:String>ü•≥</x:String>

                                    <!-- Random fun -->
                                    <x:String>üê±</x:String>
                                    <x:String>ü¶Ñ</x:String>
                                    <x:String>üöÄ</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </StackLayout>

                    <!-- Optional: Change username -->
                <Button Text="‚úèÔ∏è Change Username"
                        Clicked="ChangeUsername_Clicked"/>

                <!-- Reset username -->
                <Button Text="üë§ Reset Username"
                        BackgroundColor="#FFA07A"
                        TextColor="White"
                        Clicked="ResetUsername_Clicked"/>
            </StackLayout>
        </Frame>

        <!-- Appearance Section -->
        <Frame Background="{DynamicResource SectionBackgroundBrush}" CornerRadius="12" Padding="15" HasShadow="True">
            <StackLayout Spacing="10">
                <Label Text="Appearance" FontAttributes="Bold" FontSize="20"/>
                <Picker x:Name="ThemePicker" Title="Choose Theme"
                        SelectedIndexChanged="ThemePicker_SelectedIndexChanged">
                    <Picker.Items>
                        <x:String>System Default</x:String>
                        <x:String>Light</x:String>
                        <x:String>Dark</x:String>
                    </Picker.Items>
                </Picker>
            </StackLayout>
        </Frame>

        <!-- Animations Section -->
        <Frame Background="{DynamicResource SectionBackgroundBrush}" CornerRadius="12" Padding="15" HasShadow="True">
            <StackLayout Spacing="10">
                <Label Text="Enable animations" FontAttributes="Bold" FontSize="20"/>
                <Switch x:Name="AnimationsSwitch"
                        IsToggled="true"
                        Toggled="AnimationsSwitch_Toggled"/>
            </StackLayout>
        </Frame>

        <!-- Data Section -->
        <Frame Background="{DynamicResource SectionBackgroundBrush}" CornerRadius="12" Padding="15" HasShadow="True">
            <StackLayout Spacing="10">
                <Label Text="Data"
                       FontAttributes="Bold"
                       FontSize="20"/>
                
                <Button Text="üóë Clear Movie History"
                        BackgroundColor="LightCoral"
                        TextColor="White"
                        Clicked="ClearHistory_Clicked"
                        Margin="0,0,0,10"/>

                <Button Text="üë§ Reset Username"
                        BackgroundColor="#FFA07A"
                        TextColor="White"
                        Clicked="ResetUsername_Clicked"/>
            </StackLayout>
    </Frame>


    </StackLayout>
 </ScrollView>
</ContentPage>
