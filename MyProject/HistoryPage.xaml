<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProject.HistoryPage">

    <!-- Main Grid container with padding and spacing between rows -->
    <Grid Padding="20" RowSpacing="10">
        <Grid.RowDefinitions>
            <!-- Row 0: Page Title -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Genre Chart title -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: Genre Chart collection -->
            <RowDefinition Height="Auto"/>
            <!-- Row 3: History list -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <Label Text="📜 Your Movie History" 
               FontSize="24" 
               FontAttributes="Bold"
               HorizontalOptions="Center" 
               Grid.Row="0" />

        <!-- Genre Chart -->
        <Label Text="🎬 Movies Watched per Genre"
               FontSize="20"
               FontAttributes="Bold"
               Margin="0,10"
               Grid.Row="1"/>

        <CollectionView ItemsSource="{Binding GenreStats}"
                        SelectionMode="None"
                        HeightRequest="150"
                        Grid.Row="2">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="5">
                        <Label Text="{Binding Genre}"
                               WidthRequest="120"
                               FontAttributes="Bold"/>
                        <Label Text="{Binding EmojiBar}"
                               FontSize="20"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- History list with empty state overlay -->
        <Grid Grid.Row="3" VerticalOptions="FillAndExpand">

            <CollectionView x:Name="HistoryCollectionView"
                        ItemsSource="{Binding GroupedHistory}"
                        IsGrouped="True"
                        Grid.Row="3">
                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate>
                        <Label Text="{Binding Date}" 
                           FontAttributes="Bold" 
                           FontSize="18"
                           Background="{DynamicResource HistoryHeaderBrush}"
                           Padding="5"/>
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Orientation="Horizontal" Padding="5">
                            <Label Text="{Binding Emoji}" FontSize="24" WidthRequest="40"/>
                            <Label Text="{Binding Title}" FontSize="18" WidthRequest="150"/>
                            <Label Text="{Binding Year}" FontSize="18" WidthRequest="60"/>
                            <Label Text="{Binding Action}" FontSize="16" WidthRequest="100"/>
                            <Label Text="{Binding Timestamp, StringFormat='{0:G}'}" FontSize="14"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Empty state overlay -->
            <StackLayout HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Spacing="10"
                         IsVisible="{Binding HasHistory, Converter={StaticResource InverseBoolConverter}}">
                <Label Text="😢 No history yet." FontSize="16"/>
            </StackLayout>
            
        </Grid>
    </Grid>
</ContentPage>