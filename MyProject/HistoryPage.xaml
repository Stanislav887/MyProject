<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyProject.HistoryPage"
             Title="History">

    <StackLayout Padding="20" Spacing="10">
        <Label Text="Movie History" 
               FontSize="24" 
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Clear History Button -->
        <Button Text="🗑 Clear History"
                Clicked="ClearHistoryButton_Clicked"
                HorizontalOptions="End"
                BackgroundColor="LightCoral"
                TextColor="White"
                Margin="0,0,0,10"/>

        <CollectionView x:Name="HistoryCollectionView"
                        ItemsSource="{Binding GroupedHistory}"
                        IsGrouped="True"
                        Grid.Row="2">
            <CollectionView.GroupHeaderTemplate>
                <DataTemplate>
                    <Label Text="{Binding Date}" 
                           FontAttributes="Bold" 
                           FontSize="18"
                           BackgroundColor="#EEE"
                           Padding="5"/>
                </DataTemplate>
            </CollectionView.GroupHeaderTemplate>
            
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="5">
                        <Label Text="{Binding Emoji}" FontSize="24" WidthRequest="40"/>
                        <Label Text="{Binding Title}" FontSize="18" WidthRequest="150"/>
                        <Label Text="{Binding Year}" FontSize="18" WidthRequest="60"/>
                        <Label Text="{Binding Action}" FontSize="16" WidthRequest="100"/>
                        <Label Text="{Binding Timestamp, StringFormat='{0:G}'}" FontSize="14"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>