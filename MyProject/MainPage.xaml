<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MyProject"
    x:Class="MyProject.MainPage"
    Title="Movie Explorer">

    <VerticalStackLayout Padding="10" Spacing="8">

        <CollectionView x:Name="MoviesCollectionView" ItemsSource="{Binding Movies}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:Movie">
                    <Frame Padding="10" CornerRadius="8" HasShadow="True">
                        <HorizontalStackLayout Spacing="10">
                            <!-- Emoji -->
                            <Label Text="{Binding Emoji}" FontSize="30" VerticalOptions="Center" />

                            <!-- Movie info -->
                            <VerticalStackLayout>
                                <Label Text="{Binding Title}" FontAttributes="Bold" />
                                <Label Text="{Binding Year}" />
                                <Label Text="{Binding GenresString}" />
                            </VerticalStackLayout>
                        </HorizontalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </VerticalStackLayout>
</ContentPage>

