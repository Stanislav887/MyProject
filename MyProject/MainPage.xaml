<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:MyProject"
             xmlns:local="clr-namespace:MyProject"
             x:Class="MyProject.MainPage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:BoolToStarConverter x:Key="BoolToStarConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid Padding="10" RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- User title -->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/> <!-- Reset user button -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Text="{Binding UserTitle}" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               Margin="0,10"
               Grid.Row="0"/>

        <!-- Search Bar -->
        <SearchBar x:Name="MovieSearchBar"
                   Placeholder="Search movies..."
                   TextChanged="SearchBar_TextChanged"
                   Grid.Row="1"/>

        <!-- Director Filter Entry -->
        <StackLayout Orientation="Horizontal" Grid.Row="2" Spacing="10" Margin="0,5">
            <Label Text="Director:" VerticalOptions="Center"/>
            <Entry x:Name="DirectorFilterEntry"
                   Placeholder="Filter by director..."
                   TextChanged="DirectorFilterEntry_TextChanged"
                   HorizontalOptions="FillAndExpand"/>
        </StackLayout>

        <!-- Sorting Controls -->
        <Grid Grid.Row="3" ColumnSpacing="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/> <!-- For favorites switch -->
                <ColumnDefinition Width="Auto"/> <!-- History button -->
            </Grid.ColumnDefinitions>

            <Picker x:Name="SortPicker"
                    Title="Sort by"
                    SelectedIndexChanged="SortPicker_SelectedIndexChanged"
                    Grid.Column="0">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Rating</x:String>
                        <x:String>Year</x:String>
                        <x:String>Title</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>

            <Button Text="{Binding SortOrderText}"
                    Clicked="SortOrderButton_Clicked"
                    Grid.Column="1"
                    HorizontalOptions="End"/>

            <Button Text="📜 View History"
                    Clicked="HistoryButton_Clicked"
                    Grid.Column="2"
                    Margin="10" />

            <!-- Favorites Only Switch -->
            <StackLayout Orientation="Horizontal"
                         VerticalOptions="Center"
                         Grid.Column="3"
                         Spacing="5">
                <Label Text="Favorites Only" VerticalOptions="Center"/>
                <Switch IsToggled="{Binding ShowFavoritesOnly}" VerticalOptions="Center"/>
            </StackLayout>
        </Grid>

        <Button Text="Reset Username"
                Clicked="ResetUsernameButton_Clicked"
                Margin="0,10" 
                Grid.Row="4" />

        <!-- Movie List -->
        <CollectionView x:Name="MoviesCollectionView"
                        ItemsSource="{Binding FilteredMovies}"
                        SelectionMode="Single"
                        SelectionChanged="CollectionView_SelectionChanged"
                        Grid.Row="5">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="10">
                        <!-- Emoji -->
                        <Label x:Name="MovieEmojiLabel"
                               Text="{Binding emoji}" 
                               FontSize="30" />

                        <!-- Movie Details -->
                        <StackLayout Orientation="Vertical" Padding="10,0">
                            <Label Text="{Binding title}" FontAttributes="Bold" />
                            <Label Text="{Binding year}" FontSize="12" />
                            <Label Text="{Binding director}" FontSize="12" />
                            <Label Text="{Binding rating}" FontSize="12" />
                            <Label Text="{Binding genreString}" FontSize="12" />
                        </StackLayout>

                        <!-- Favorite button -->
                        <Button Text="{Binding IsFavorite, Converter={StaticResource BoolToStarConverter}}"
                                Clicked="FavoriteButton_Clicked"
                                FontSize="20"
                                VerticalOptions="Center"
                                HorizontalOptions="End"
                                x:Name="FavoriteButton"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>



