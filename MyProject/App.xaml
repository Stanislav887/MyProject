<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MyProject"
             x:Class="MyProject.App">
    <Application.Resources>
        <ResourceDictionary>

            <!-- Theme-aware background for Settings cards -->
            <SolidColorBrush x:Key="SectionBackgroundBrush">
                <SolidColorBrush.Color>
                    <AppThemeBinding
                        Light="#F2F2F7"
                        Dark="#2A2A2A" />
                </SolidColorBrush.Color>
            </SolidColorBrush>
            
            <!-- Theme-aware background for MainPage movie cards -->
            <SolidColorBrush x:Key="CardBackgroundBrush">
                <SolidColorBrush.Color>
                    <AppThemeBinding
                        Light="#F2F2F7"
                        Dark="#2A2A2A" />
                </SolidColorBrush.Color>
            </SolidColorBrush>

            <!-- Inverse bool converter for empty state visibility -->
            <local:InverseBoolConverter x:Key="InverseBoolConverter" />

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
